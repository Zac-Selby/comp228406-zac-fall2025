<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.studentinfo.zacselby_comp228lab4.StudentFormController">

    <!-- LEFT: fields -->
    <left>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="15" right="10" bottom="15" left="15"/></padding>
            <columnConstraints>
                <ColumnConstraints minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <children>
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Province:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="provinceField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="City:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="cityField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Postal Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="postalField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Phone Number:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </left>

    <!-- CENTER/RIGHT: major, courses, activities -->
    <center>
        <VBox spacing="12">
            <padding><Insets top="15" right="15" bottom="15" left="10"/></padding>

            <!-- Major selection -->
            <HBox spacing="15">
                <children>
                    <RadioButton fx:id="csRadio" text="Computer Science"/>
                    <RadioButton fx:id="busRadio" text="Business"/>
                </children>
            </HBox>

            <!-- Course selection -->
            <Label text="Course:"/>
            <ComboBox fx:id="courseCombo" promptText="Select a course" prefWidth="260"/>

            <Label text="Selected Courses:"/>
            <ListView fx:id="selectedCourses" prefHeight="160"/>

            <!-- Activities -->
            <Label text="Activities:"/>
            <VBox spacing="6">
                <children>
                    <CheckBox fx:id="studentCouncilCheck" text="Student Council"/>
                    <CheckBox fx:id="volunteerCheck" text="Volunteer Work"/>
                </children>
            </VBox>
        </VBox>
    </center>

    <!-- BOTTOM: button + output -->
    <bottom>
        <VBox spacing="6">
            <padding><Insets top="0" right="15" bottom="15" left="15"/></padding>
            <children>
                <HBox spacing="10">
                    <children>
                        <Button fx:id="displayBtn" text="Display" onAction="#onDisplay"/>
                        <!-- Optional: add a Clear button
                        <Button text="Clear" onAction="#onClear"/>
                        -->
                    </children>
                </HBox>
                <TextArea fx:id="outputArea" prefRowCount="6" wrapText="true"/>
            </children>
        </VBox>
    </bottom>
</BorderPane>
